{
  "name": "unide",
  "version": "0.5.0",
  "description": "Universal visual designer for Vaadin",
  "repository": "https://github.com/mjvesa/unide-src",
  "icon": "public/images/unide_tiny.png",
  "publisher": "mjvesa",
  "main": "public/extension.js",
  "bin": "./cli.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve public",
    "test": "jest --group=unit",
    "test-all": "jest --group=unit --group=selenium",
    "test-coverage": "jest --group=unit --group=selenium --coverage",
    "test-selenium": "jest --group=selenium"
  },
  "author": "Matti Vesa",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.32.0"
  },
  "activationEvents": [
    "onCommand:extension.unide"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.unide",
        "title": "Unide"
      }
    ]
  },
  "dependencies": {
    "@vaadin/vaadin-core": "^14.0.3",
    "@vaadin/vaadin-grid": "^5.4.8",
    "@vaadin/vaadin-tabs": "^3.0.4",
    "codemirror": "^5.44.0",
    "electron": "^9.1.0",
    "file-saver": "^2.0.0-rc.4",
    "jszip": "^3.1.5",
    "jszip-utils": "^0.1.0",
    "vanilla-picker": "^2.7.2"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@types/vscode": "^1.32.0",
    "babel-jest": "^26.1.0",
    "eslint": "^5.15.3",
    "esm": "^3.2.25",
    "jest": "^26.1.0",
    "jest-environment-webdriver": "^0.2.0",
    "jest-runner-groups": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.16.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "selenium-webdriver": "^4.0.0-alpha.7",
    "serve": "^11.0.2"
  }
}
